{
    "compilerOptions": {
        "moduleResolution": "node",
        "preserveSymlinks": true,
        "strict": true,
        "traceResolution": true,
        "version": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./lib",
        "watch": false,
        "declaration": true,
        "declarationDir": "./types",
        "baseUrl": "."
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "bin",
        "types"
    ]
}
